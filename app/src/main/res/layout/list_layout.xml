<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView android:id="@+id/lang_image_id"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:padding="4dp"
                       android:scaleType="centerInside"
                       android:adjustViewBounds="true"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lang_name_hint"
                    app:layout_constraintTop_toBottomOf="@id/lang_image_id"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lang_name"
                    app:layout_constraintLeft_toRightOf="@id/paradigm_hint"
                    app:layout_constraintTop_toBottomOf="@id/lang_image_id"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/authors_hint"
                    app:layout_constraintTop_toBottomOf="@id/lang_name"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/authors"
                    app:layout_constraintLeft_toRightOf="@id/paradigm_hint"
                    app:layout_constraintTop_toBottomOf="@id/lang_name"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_hint"
                    app:layout_constraintTop_toBottomOf="@id/authors"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release"
                    app:layout_constraintLeft_toRightOf="@id/paradigm_hint"
                    app:layout_constraintTop_toBottomOf="@id/authors"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paradigm_hint"
                    app:layout_constraintTop_toBottomOf="@id/release"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/paradigm"
                    app:layout_constraintLeft_toRightOf="@id/paradigm_hint"
                    app:layout_constraintTop_toBottomOf="@id/release"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tiobe_hint"
                    app:layout_constraintTop_toBottomOf="@id/paradigm_hint"

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tiobe"
                    app:layout_constraintLeft_toRightOf="@id/paradigm_hint"
                    app:layout_constraintTop_toBottomOf="@id/paradigm_hint"

            />



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>